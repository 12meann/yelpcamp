<% include ../partials/header %>


<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h3> Create a New Campground</h3>
    </div>
    
    <div class="col-10 col-md-6 col-lg-4">
        <form method="POST" action="/campgrounds" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="campground[name]">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" placeholder="price" name="campground[price]" min="0.01" step="0.01">
            </div>
            <div class="form-group">
               <textarea class="form-control" type="text" placeholder="description" name="campground[description]"></textarea> 
            </div>
            <div class="form-group">
                <label for="image">Upload Image</label>
                <input class="form-control-file"type="file" id="image" name="image" accept="image/*" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>

    <a href="/campgrounds">Go Back</a>
    </div>
</div>




<% include ../partials/footer %>